{
  "name": "ng-notifications",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ng-notifications/src",
  "prefix": "acp",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "implicitDependencies": ["ui-kit"],
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/ng-notifications/ng-package.json",
        "tsConfig": "packages/ng-notifications/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ng-notifications/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access=public",
        "cwd": "dist/packages/ng-notifications",
        "parallel": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ng-notifications/jest.config.ts",
        "tsConfig": "packages/ng-notifications/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
