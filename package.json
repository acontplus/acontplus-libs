{
  "name": "acontplus-libs",
  "version": "1.0.0",
  "scripts": {
    "start": "nx serve demo-app --ssl true --hmr",
    "build": "nx build demo-app",
    "watch": "nx build demo-app --watch --configuration development",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "build:all": "nx run-many --target=build --all",
    "build:libs": "nx run-many --target=build --projects=core,ng-auth,ng-components,ng-customer,ng-infrastructure,ng-notifications,ui-kit,utils",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:fix": "pnpm run format",
    "lint:all": "pnpm run lint && pnpm run format:check",
    "clean": "nx reset",
    "local-registry": "nx run acontplus-libs:local-registry",
    "e2e": "nx run demo-app-e2e:e2e",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@acontplus/core": "workspace:^",
    "@acontplus/ng-auth": "workspace:^",
    "@acontplus/ng-components": "workspace:^",
    "@acontplus/ng-config": "workspace:^",
    "@acontplus/ng-customer": "workspace:^",
    "@acontplus/ng-infrastructure": "workspace:^",
    "@acontplus/ng-notifications": "workspace:^",
    "@acontplus/ui-kit": "workspace:^",
    "@acontplus/utils": "workspace:^",
    "@angular/animations": "21.0.6",
    "@angular/cdk": "21.0.5",
    "@angular/common": "21.0.6",
    "@angular/compiler": "21.0.6",
    "@angular/core": "21.0.6",
    "@angular/forms": "21.0.6",
    "@angular/material": "21.0.5",
    "@angular/platform-browser": "21.0.6",
    "@angular/platform-server": "21.0.6",
    "@angular/router": "21.0.6",
    "@angular/ssr": "21.0.4",
    "@jsverse/transloco": "^8.2.0",
    "@ng-select/ng-select": "21.1.3",
    "bootstrap": "^5.3.8",
    "decimal.js": "^10.6.0",
    "express": "^5.2.1",
    "highlight.js": "11.11.1",
    "jsonwebtoken": "9.0.2",
    "jwt-decode": "^4.0.0",
    "ngx-toastr": "^19.1.0",
    "rxjs": "^7.8.2",
    "sweetalert2": "^11.26.17",
    "tabulator-tables": "^6.3.1",
    "tslib": "^2.8.1",
    "zone.js": "0.16.0"
  },
  "devDependencies": {
    "@angular/build": "21.0.4",
    "@angular/cli": "21.0.4",
    "@angular/compiler-cli": "21.0.6",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@jest/globals": "30.0.0",
    "@nx/angular": "22.3.3",
    "@nx/devkit": "22.3.3",
    "@nx/eslint": "22.3.3",
    "@nx/eslint-plugin": "22.3.3",
    "@nx/jest": "22.3.3",
    "@nx/js": "22.3.3",
    "@nx/playwright": "22.3.3",
    "@nx/rollup": "22.3.3",
    "@nx/vite": "22.3.3",
    "@nx/web": "22.3.3",
    "@nx/workspace": "22.3.3",
    "@playwright/test": "^1.57.0",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.13.20",
    "@swc/helpers": "0.5.17",
    "@types/express": "^4.17.25",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "20.19.9",
    "@types/tabulator-tables": "^6.3.1",
    "@typescript-eslint/utils": "^8.51.0",
    "@vitest/ui": "4.0.0",
    "ajv": "^8.17.1",
    "angular-eslint": "21.0.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "9.1.7",
    "jest": "30.0.0",
    "jest-environment-jsdom": "30.0.0",
    "jest-environment-node": "^29.7.0",
    "jest-preset-angular": "16.0.0",
    "jest-util": "30.0.0",
    "jiti": "2.4.2",
    "jsonc-eslint-parser": "^2.4.2",
    "lint-staged": "16.2.3",
    "ng-packagr": "21.0.1",
    "nx": "22.3.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "sass": "^1.97.1",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "verdaccio": "^6.2.4",
    "vite": "^7.3.0",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "nx",
      "rollup",
      "unrs-resolver"
    ],
    "overrides": {
      "qs": ">=6.14.1"
    }
  },
  "lint-staged": {
    "*.{ts,js,html,css,scss,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "nx run-many --target=lint --files"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
